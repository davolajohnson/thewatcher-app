<% layout('layouts/layout') %>

<h2>Edit: <%= item.title %></h2>

<form action="/watchlist/<%= item._id %>?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= item.title %>" required />

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="<%= item.genre %>" />

  <label for="status">Status:</label>
  <select name="status" required>
    <option value="Want to Watch" <%= item.status === 'Want to Watch' ? 'selected' : '' %>>Want to Watch</option>
    <option value="Watching" <%= item.status === 'Watching' ? 'selected' : '' %>>Watching</option>
    <option value="Watched" <%= item.status === 'Watched' ? 'selected' : '' %>>Watched</option>
    <option value="Recommendations" <%= item.status === 'Recommendations' ? 'selected' : '' %>>Recommendations</option>
  </select>

  <label for="notes">Notes:</label>
  <textarea name="notes" rows="4"><%= item.notes %></textarea>

  <button type="submit">Update</button>
</form>
