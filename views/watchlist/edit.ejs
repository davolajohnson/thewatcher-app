<h1>Edit WatchList Item</h1>

<form action="/watchlist/<%= item._id %>?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= item.title %>" required>

  <label for="status">Status:</label>
  <select name="status" id="status" required>
    <option value="Want to Watch" <%= item.status === 'Want to Watch' ? 'selected' : '' %>>Want to Watch</option>
    <option value="Watching" <%= item.status === 'Watching' ? 'selected' : '' %>>Watching</option>
    <option value="Watched" <%= item.status === 'Watched' ? 'selected' : '' %>>Watched</option>
    <option value="Recommendations" <%= item.status === 'Recommendations' ? 'selected' : '' %>>Recommendations</option>
  </select>

  <button type="submit" class="btn">Update</button>
  <a href="/watchlist" class="btn btn-secondary">Cancel</a>
</form>
